[user]
	email = matej.vitek.business@gmail.com
	name = Matej Vitek
	
[cola]
	spellcheck = false

[alias]
	a = add -A
	c = commit -m
	cl = clone
	d = diff
	p = push
	ps = push
	pl = pull
	s = status

	untrack = update-index --assume-unchanged
	track = update-index --no-assume-unchanged
	untracked = !git ls -v | grep ^h | cut -c 3-
	aliases = !git config -l | grep alias | cut -c 7-
